@{
    ViewData["Title"] = "GestionChambres";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion des Chambres</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="divAjouter">
        <h1>Gestion des Chambres</h1>
        <button class="add-room-btn">Ajouter une chambre</button>
    </div>
    <div class="rooms-container">
        <!-- Début -->
        <div class="room-item">
            <img src="~/images/chambre1.jpg" alt="Chambre Deluxe" class="room-image" />
            <div class="room-details">
                <p class="room-name">Nom: Deluxe</p>
                <p class="room-price">Prix par nuit: 150$</p>
                <p class="room-beds">Lits: 2 doubles</p>
                <p class="room-view">Vue: Mer</p>
            </div>
            <button class="edit-room">Modifier</button>
            <button class="delete-room">Supprimer</button>
        </div>
        <div class="room-item">
            <img src="~/images/chambre2.jpg" alt="Chambre Suite Royale" class="room-image" />
            <div class="room-details">
                <p class="room-name">Nom: Suite Royale</p>
                <p class="room-price">Prix par nuit: 250$</p>
                <p class="room-beds">Lits: 3 lits</p>
                <p class="room-view">Vue: Jardin</p>
            </div>
            <button class="edit-room">Modifier</button>
            <button class="delete-room">Supprimer</button>
        </div>

        <div class="room-item">
            <img src="~/images/chambre3.jpg" alt="Chambre Simple" class="room-image" />
            <div class="room-details">
                <p class="room-name">Nom: Simple</p>
                <p class="room-price">Prix par nuit: 80$</p>
                <p class="room-beds">Lits: 1 lit</p>
                <p class="room-view">Vue: Ville</p>
            </div>
            <button class="edit-room">Modifier</button>
            <button class="delete-room">Supprimer</button>
        </div>

        <div class="room-item">
            <img src="~/images/chambre4.jpg" alt="Chambre Twin" class="room-image" />
            <div class="room-details">
                <p class="room-name">Nom: Twin</p>
                <p class="room-price">Prix par nuit: 110$</p>
                <p class="room-beds">Lits: 2 lits individuels</p>
                <p class="room-view">Vue: Cour</p>
            </div>
            <button class="edit-room">Modifier</button>
            <button class="delete-room">Supprimer</button>
        </div>

        <div class="room-item">
            <img src="~/images/chambre5.jpg" alt="Chambre Familiale" class="room-image" />
            <div class="room-details">
                <p class="room-name">Nom: Familiale</p>
                <p class="room-price">Prix par nuit: 200$</p>
                <p class="room-beds">Lits: 4 lits</p>
                <p class="room-view">Vue: Parc</p>
            </div>
            <button class="edit-room">Modifier</button>
            <button class="delete-room">Supprimer</button>
        </div>

        <div class="room-item">
            <img src="~/images/chambre6.jpg" alt="Chambre Double" class="room-image" />
            <div class="room-details">
                <p class="room-name">Nom: Double</p>
                <p class="room-price">Prix par nuit: 140$</p>
                <p class="room-beds">Lits: 2 doubles</p>
                <p class="room-view">Vue: Piscine</p>
            </div>
            <button class="edit-room">Modifier</button>
            <button class="delete-room">Supprimer</button>
        </div>

    </div>

</body>
</html>

