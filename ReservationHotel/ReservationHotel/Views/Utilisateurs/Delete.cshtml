@model ReservationHotel.Models.Utilisateur

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Supprimer un Utilisateur</title>
    <link rel="stylesheet" href="~/css/styles3.css">
    <style>
        /* Même style que le formulaire Supprimer Chambre */
        .detail-label {
            font-weight: bold;
            color: #333;
            margin-bottom: 5px;
            text-align: center;
        }

        .detail-value {
            background-color: #f7f7f7;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-bottom: 20px;
        }

        .btn-danger {
            margin-top: 25px;
            background-color: #dc3545;
            color: white;
            border-radius: 4px;
            padding: 10px;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s;
            width: 100%;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Supprimer un Utilisateur</h1>
        <hr />
        <div class="row">
            <div class="col">
                <div class="detail-label">@Html.DisplayNameFor(model => model.Nom)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Nom)</div>

                <div class="detail-label">@Html.DisplayNameFor(model => model.Prenom)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Prenom)</div>

                <div class="detail-label">@Html.DisplayNameFor(model => model.Email)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Email)</div>

                <div class="detail-label">@Html.DisplayNameFor(model => model.MotDePasse)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.MotDePasse)</div>
            </div>
        </div>

        <form asp-action="Delete" class="form-group text-center">
            <input type="hidden" asp-for="UserId" />
            <input type="submit" value="Supprimer" class="btn btn-danger" />
        </form>
        <div class="back2">
            <a asp-action="Index">Retour à la liste</a>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
